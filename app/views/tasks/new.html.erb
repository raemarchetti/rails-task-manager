<div class='container mt-5'>
<h1>New Task</h1>

<%= form_with model: @task, url: tasks_path, local: true do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_area :details, class: 'form-control' %>
  </div>

  <%= f.submit 'Create Task', class: 'btn btn-primary' %>
<% end %>

<div>
  <%= link_to tasks_path do %>
    <i class="fa-solid fa-clock-rotate-left"></i> Back to list
  <% end %>
</div>

</div>
