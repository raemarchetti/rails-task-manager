<div class= 'container mt-5'>
<h1><%= @task.title %></h1>

<%= form_with model: @task, url: task_path(@task), method: :patch, local: true do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_area :details, class: 'form-control' %>
  </div>

  <div class="form-check">
    <%= f.check_box :completed, class: 'form-check-input' %>
    <%= f.label :completed, class: 'form-check-label' %>
  </div>

  <%= f.submit 'Update Task', class: 'btn btn-primary' %>
  <% end %>

  <div>
    <%= link_to tasks_path do %>
    <i class="fa-solid fa-clock-rotate-left"></i> Back to list
  <% end %>
</div>
</div>
